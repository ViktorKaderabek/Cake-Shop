<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20sp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_topic"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="0.1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Nejnovejsi Novinky"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_secondaryTopic"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:text="Vyberte si neco !"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="0.1sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:gravity="center|left"
                app:layout_constraintStart_toStartOf="@+id/txt_topic"
                app:layout_constraintTop_toBottomOf="@+id/txt_topic" />

            <ImageView
                android:id="@+id/img_look"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:layout_marginLeft="50dp"
                android:src="@drawable/cake_shop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>