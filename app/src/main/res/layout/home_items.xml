<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_topic"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="0.1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Nejnovejsi Novinky"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_secondaryTopic"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="0.1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Vyberte si neco !"
                app:layout_constraintStart_toStartOf="@+id/txt_topic"
                app:layout_constraintTop_toBottomOf="@+id/txt_topic" />

            <ImageView
                android:id="@+id/img_look"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cake_shop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_secondaryTopic"
                app:layout_constraintTop_toBottomOf="@+id/txt_secondaryTopic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>